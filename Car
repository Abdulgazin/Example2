    Engine engine;
    void startMove(int km){
        System.out.println(engine.durability = engine.durability-(km/100));//так ты имел ввиду надо сделать?буду на полях пометки делать тогда
    //т е этот метод ТОЛЬКО принимает пробег и уменьшает дюрабилити?
    }
    int showEngineInfo(Car c){//здесь понял что прописываю кар,подразумевает любой авто
        return engine.durability;//а уже этот метод принимает обьект энджайн и показывает его дюрабилити?!так??
    }
}
class Service{
    void repairEngine(Car car){
        car.engine.durability=100;
        System.out.println("Состояние двигателя "+(car.engine)+ " восстановлено до "+(car.engine.durability=100));
        //return car.engine.durability;
    }
    void vyborAvto(ArrayList<Car> c){
          int min=100;
          for(Car i:c){
              if(i.engine.durability<min){
                  min=i.engine.durability;
              }
              else
                  System.out.println("это не минимальное значение");
          }
    }
}
