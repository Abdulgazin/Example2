        System.out.println("состояние двигателя авто составляет " + engine.durability);//return engine.durability;//а уже этот метод принимает обьект энджайн и показывает его дюрабилити?!так??
    }
}
class Service{
    void repairEngine(Car car){
        car.engine.durability=100;
        System.out.println("Состояние двигателя "+(car.engine)+ " восстановлено до "+(car.engine.durability=100));
    }
    Car vyborAvto(Car[]car) {
        Engine minimum = car.get(0).engine;//здесь пока не понял как с логикой разобраться
        for (int i = 0; i < car.length; i++) {
            System.out.println(car[i]);
        }
        return null;
    }
}
